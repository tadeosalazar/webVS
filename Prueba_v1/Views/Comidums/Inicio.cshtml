@model IEnumerable<Prueba_v1.Models.dbModels.Comidum>


@{
    ViewData["Title"] = "Inicio";
    Layout = User.IsInRole("Admin") ? "_LayoutAdm" : "_LayoutEsp";
}

<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/entradas.css" asp-append-version="true" />
</head>

<body>
    <h1>A DEGUSTAR</h1>
    <p>Escoge de nuestro amplio catálogo de comidas para que no te quedes con hambre</p>

    <div class="col-lg-12">
        <div class="card-grid">
            @foreach (var comida in Model)
            {
                <div class="card-container">
                    <div class="card">
                        <div class="face front">
                            <img src="@comida.Imagen" alt="">
                            <h3>@comida.Nombre</h3>
                        </div>
                        <div class="face back">
                            <p>@comida.Descripcion</p>
                            <div class="link">
                                <a href="#">Agregar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
